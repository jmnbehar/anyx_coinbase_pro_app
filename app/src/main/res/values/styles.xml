<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_bg</item>
        <item name="colorPrimaryDark">@color/gray_bg</item>
        <item name="android:colorAccent">@color/dark_accent</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>


    <style name="AppThemeLight" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_bg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/gray_bg</item>
        <item name="android:colorBackground">@color/gray_bg</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/timespan_radio_button</item>
    </style>

    <style name="ButtonColorWhiteText" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonColorDarkText" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
