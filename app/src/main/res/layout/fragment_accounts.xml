<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_exchange_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_accounts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accounts_login_to_your_accounts"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/layout_exchange_cbpro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_exchange_cbpro_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/accounts_coinbase_pro_icon" />

                    <TextView
                        android:id="@+id/txt_exchange_cbpro_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="24sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_exchange_cbpro_account_api_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_exchange_cbpro_account_api_key_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_exchange_cbpro_account_api_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_exchange_cbpro_account_edit_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etxt_exchange_cbpro_account_api_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_api_key_label"
                        android:inputType="text"
                        android:singleLine="false"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/etxt_exchange_cbpro_account_secret"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_api_secret_label"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLines="6"
                        android:minLines="3"
                        android:singleLine="false"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/etxt_exchange_cbpro_account_passphrase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/login_passphrase_label"
                        android:inputType="textPassword"
                        android:lines="2"
                        android:singleLine="false"
                        tools:ignore="Autofill" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_exchange_cbpro_account_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accounts_logout_button_label" />

                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5" />

                    <Button
                        android:id="@+id/btn_exchange_binance_account_cancel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accounts_cancel_button" />

                    <Button
                        android:id="@+id/btn_exchange_cbpro_account_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accounts_login_button_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_accounts_cbpro_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_help_btn" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_exchange_binance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_exchange_binance_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/accounts_binance_icon" />

                    <TextView
                        android:id="@+id/txt_exchange_binance_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="24sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_exchange_binance_account_api_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_exchange_binance_account_api_key_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_exchange_binance_account_api_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_exchange_binance_account_edit_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etxt_exchange_binance_account_api_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_api_key_label"
                        android:inputType="text"
                        android:singleLine="false"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/etxt_exchange_binance_account_secret"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_api_secret_label"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLines="6"
                        android:minLines="3"
                        android:singleLine="false"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/etxt_exchange_binance_account_passphrase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/login_passphrase_label"
                        android:inputType="textPassword"
                        android:lines="2"
                        android:singleLine="false"
                        tools:ignore="Autofill" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_exchange_binance_account_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accounts_logout_button_label" />

                    <android.support.v4.widget.Space
                        android:id="@+id/space"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btn_exchange_binance_account_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accounts_cancel_button" />

                    <Button
                        android:id="@+id/btn_exchange_binance_account_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accounts_login_button_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_accounts_binance_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_help_btn" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_login_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/login_disclaimer"
                android:textSize="16sp" />



        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>