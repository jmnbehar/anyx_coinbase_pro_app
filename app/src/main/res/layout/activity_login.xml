<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:text="Login Text Goes Here"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etxt_login_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Api Key" />

    <EditText
        android:id="@+id/etxt_login_secret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="API Secret"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etxt_login_passphrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Passphrase"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/cb_save_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save API key and secret" />

    <CheckBox
        android:id="@+id/cb_save_passphrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Also save passphrase" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="93dp" />

</LinearLayout>