<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<TextView
    android:id="@+id/txt_alert_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Alert Page"
    android:textSize="30sp"
    tools:layout_editor_absoluteX="48dp"
    tools:layout_editor_absoluteY="16dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabl_alerts_currency"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top">

        <android.support.design.widget.TabItem
            android:id="@+id/tab_alerts_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tab_alerts_eth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETH"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tab_alerts_bch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BCH"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tab_alerts_ltc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LTC"/>
    </android.support.design.widget.TabLayout>



<LinearLayout
    android:id="@+id/layout_alert_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_alert_price_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_alert_price_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etxt_alert_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/txt_alert_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BTC" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

<Button
    android:id="@+id/btn_alert_set"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Send" />

<com.baoyz.swipemenulistview.SwipeMenuListView
    android:id="@+id/list_alerts"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />


</LinearLayout>