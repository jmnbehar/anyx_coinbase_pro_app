<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/img_history_icon"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/txt_history_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:text="Buy"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_history_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="555"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_history_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text=" ETH for "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txt_history_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="$10"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_history_trade_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Limit)"
            android:textAlignment="textEnd"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>