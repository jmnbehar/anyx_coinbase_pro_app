<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:screenOrientation="portrait"
    android:orientation="vertical"
    android:id="@+id/scrollview_eula"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/layout_verify_intro_eula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:screenOrientation="portrait"
        tools:openDrawer="start">

        <TextView
            android:id="@+id/txt_verify_intro_eula_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anyx_eula_header"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/txt_verify_intro_eula_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:text="@string/anyx_eula_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_verify_intro_eula_section_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="@string/anyx_eula_section_1_title"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_verify_intro_eula_1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/anyx_eula_1_1"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_verify_intro_eula_1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anyx_eula_1_2"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txt_verify_intro_eula_1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anyx_eula_1_3"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_verify_intro_eula_1_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/anyx_eula_1_4"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_verify_intro_eula_1_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/anyx_eula_1_5"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_verify_intro_eula_1_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anyx_eula_1_6"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_verify_intro_eula_section_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            android:text="@string/anyx_eula_section_2_title"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_verify_intro_eula_2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anyx_eula_2_1"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>