<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingEnd="20dp"
    android:paddingStart="0dp"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/img_fill_icon"
        android:layout_width="15dp"
        android:layout_height="0dp"
        android:contentDescription="@string/chart_history_order_side_buy"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_fill_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/layout_fill_info"
        app:layout_constraintTop_toTopOf="@+id/layout_fill_info" />

    <LinearLayout
        android:id="@+id/layout_fill_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="2dp"
        android:paddingEnd="20dp"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_fill_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_fill_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/layout_fill_extra_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_fill_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_fill_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>