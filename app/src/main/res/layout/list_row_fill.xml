<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingEnd="20dp"
    android:paddingStart="0dp"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/img_fill_icon"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/chart_history_order_side_buy" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingEnd="20dp"
            android:paddingStart="0dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/txt_fill_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_fill_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_fill_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_fill_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingEnd="20dp"
            android:paddingStart="0dp"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/txt_fill_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_fill_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_fill_trade_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingEnd="20dp"
            android:paddingStart="0dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/txt_fill_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>